{% extends 'modal-base.html.twig' %}

{% block title %}
    <h4 class="modal-title">
        {% if type == 'add' %}
            添加社团
        {% elseif type == 'edit' %}
            编辑社团
        {% endif %}
    </h4>
{% endblock %}

{% block body %}
    <form class="form-horizontal" id="member"
            {% if type == 'add' %}
                action="{{ path('community_member_add',{communityId:communityId}) }}"
            {% elseif type == 'edit' %}
                action="{{ path('community_member_edit',{id:member.id,communityId:communityId}) }}"
            {% endif %}
          method="post">
        <div class="form-group">
            <label for="inputName" class="col-sm-2 control-label">姓名</label>

            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputName" name="name"
                       value="{{ member.name |default('') }}"
                       placeholder="姓名">
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail" class="col-sm-2 control-label">性别</label>

            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail" name="sex"
                       value="{{ member.sex |default('') }}"
                       placeholder="性别">
            </div>
        </div>
        <div class="form-group">
            <label for="inputName" class="col-sm-2 control-label">部门</label>

            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputName" placeholder="部门" name="department"
                       value="{{ member.department |default('') }}">
            </div>
        </div>
        <div class="form-group">
            <label for="inputName" class="col-sm-2 control-label">职位</label>

            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputName" placeholder="职位" name="position"
                       value="{{ member.position |default('') }}">
            </div>
        </div>
    </form>
    <script src="{{ asset('bundles/app/js/Controller/Community/member-show.js') }}"></script>
{% endblock %}


{% block footer %}
    <button type="button" class="btn btn-default " data-dismiss="modal">关闭</button>
    <button type="button" class="btn btn-primary show-primary member-submit">保存</button>
{% endblock %}