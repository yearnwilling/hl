{% extends 'AppBundle::layout.html.twig' %}

{% block sidebar_menu %}
    <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- Sidebar user panel -->
            <div class="user-panel">
                <div class="pull-left image">
                    <img src=" {{ asset('resource/adminLTE/icon/hdu.jpg') }}" class="img-circle" alt="User Image">
                </div>
                <div class="pull-left info">
                    <p style="  margin-top: 13px">杭电社团</p>
                </div>
            </div>
            <!-- sidebar menu: : style can be found in sidebar.less -->
            <ul class="sidebar-menu">
                <li class="header">社团小助手</li>
                <li class="treeview {% if nav == 'index' %}active{% endif %}">
                    <a href="{{ path('base_index') }}">
                        <i class="fa fa-home"></i> <span>主页</span>
                        <span class="pull-right-container">
                        </span>
                    </a>
                </li>
                <li class="treeview">
                    <a href="{{ path('community') }}">
                        <i class="fa fa-chevron-left"></i> <span>返回社团列表</span>
                        <span class="pull-right-container">
                        </span>
                    </a>
                </li>
                <li class="treeview {% if nav == 'community' %}active{% endif %}">
                    <a href="#">
                        <i class="fa fa-dashboard"></i> <span>社团管理</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                    </a>
                    <ul class="treeview-menu">
                        <li {% if sub_nav is defined and sub_nav == 'member' %}class="active"{% endif %}>
                            <a href="{{ path('community_member', {communityId:communityId}) }}"><i class="fa fa-circle-o"></i> 社员管理</a>
                        </li>
                        <li {% if sub_nav is defined and sub_nav == 'activity' %}class="active"{% endif %}>
                            <a href="{{ path('community_activity', {communityId:communityId}) }}"><i class="fa fa-circle-o"></i> 活动管理</a></li>
                        <li {% if sub_nav is defined and sub_nav == 'money' %}class="active"{% endif %}>
                            <a href="{{ path('community_money',{communityId:communityId}) }}"><i class="fa fa-circle-o"></i> 经费管理</a></li>
                        <li {% if sub_nav is defined and sub_nav == 'picture' %}class="active"{% endif %}>
                            <a href="{{ path('community_picture',{communityId:communityId}) }}"><i class="fa fa-circle-o"></i> 图片管理</a></li>
                    </ul>
                </li>

            </ul>
        </section>
        <!-- /.sidebar -->
    </aside>

{% endblock %}

