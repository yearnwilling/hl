{% extends 'AppBundle:Community:layout.html.twig' %}

{% set nav = 'community' %}
{% set sub_nav = 'member' %}

{% block content_header %}
    <h1>全部社员</h1>
{% endblock %}


{% block content_body_boxed %}
    <div class="row">
        <div class="col-xs-12">
            <div class="well well-sm mtm">
                <form id="table-filter-form" class="form-inline" method="get">
                    <div class="form-group">
                        <input class="form-control input-sm" type="text" placeholder="搜索关键字" name="keyword" value=""
                               style="width: 240px;">
                    </div>
                    <button class="btn btn-primary btn-sm">搜索</button>
                    <a type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal"
                       style="margin-left: 13px" data-url="{{ path('community_member_add',{communityId:communityId}) }}">添加</a>
                </form>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th width="20%">姓名</th>
                        <th width="20%">性别</th>
                        <th width="20%">部门</th>
                        <th width="20%">职位</th>
                        <th width="20%">操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for member in members %}
                        <tr>
                            <td>{{ member.name }}</td>
                            <td>{{ member.sex }}</td>
                            <td>{{ member.department }}</td>
                            <td>{{ member.position }}</td>
                            <td>
                                <a type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal" data-url="{{ path('community_member_edit', {id:member.id, communityId:communityId}) }}" >编辑</a>
                                <button type="button" class="btn btn-danger member-delete" data-toggle="modal" data-target="#delete-modal"  data-url="{{ path('community_member_delete', {id:member.id}) }}">删除</button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
    </div>

    {{ macro.paginator(paginator) }}


{% endblock %}
