{% extends 'modal-base.html.twig' %}

{% block title %}
    <h4 class="modal-title">
        添加社团
    </h4>
{% endblock %}

{% block body %}
    <form class="form-horizontal" id="community-form"
          action="{{ path('community_add') }}"
          method="POST">
        <div class="form-group">
            <label for="inputName" class="col-sm-2 control-label">社团名称</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="name" name="name" placeholder="社团名称">
            </div>
        </div>
        <div class="form-group">
            <label for="inputName" class="col-sm-2 control-label">社长</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="principal" name="principal" placeholder="社长">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">社团分类</label>
            <div class="col-sm-10">
                <select class="form-control" id="category" name="category">
                    <option value="video">影视科技类社团</option>
                    <option value="sports">运动类社团</option>
                    <option value="literature">文学类社团</option>
                    <option value="personnel">人才类社团</option>
                    <option value="music">音乐舞蹈类社团</option>
                </select>
            </div>
        </div>
    </form>
    <script src="{{ asset('bundles/app/js/Controller/Community/add-show.js') }}"></script>
{% endblock %}


{% block footer %}
    <button type="button" class="btn btn-default " data-dismiss="modal">关闭</button>
    <button type="button" class="btn btn-primary show-primary community-submit">保存</button>
{% endblock %}