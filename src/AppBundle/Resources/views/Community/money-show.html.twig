{% extends 'modal-base.html.twig' %}

{% block title %}
    <h4 class="modal-title">
        添加收入
    </h4>
{% endblock %}

{% block body %}
    <form class="form-horizontal" id="money-form"
            {% if submitType == 'add' %}
                action="{{ path('community_money_add', {communityId:communityId, type:type}) }}"
            {% elseif submitType == 'edit' %}
                {#action="{{ path('community_member_edit',{id:member.id,communityId:communityId}) }}"#}
            {% endif %}
    method="post">
        <div class="form-group">
            <label for="inputName" class="col-sm-2 control-label">来源</label>

            <div class="col-sm-10">
                <input type="email" class="form-control" id="info" name="info"
                       placeholder="来源">
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail" class="col-sm-2 control-label">金额</label>

            <div class="col-sm-10">
                <input type="email" class="form-control" id="number" name="number"
                       placeholder="金额">
            </div>
        </div>
        <div class="form-group">
            <label for="inputName"
                   class="col-sm-2 control-label">参与人员</label>

            <div class="col-sm-10">
                <input type="text" class="form-control" id="community_member" name="community_member"
                       placeholder="参与人员">
            </div>
        </div>
    </form>
    <script src="{{ asset('bundles/app/js/Controller/Community/money-show.js') }}"></script>
{% endblock %}


{% block footer %}
    <button type="button" class="btn btn-default " data-dismiss="modal">关闭</button>
    <button type="button" class="btn btn-primary show-primary money-submit">保存</button>
{% endblock %}