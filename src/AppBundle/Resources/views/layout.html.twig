{% extends 'base.html.twig' %}
{% import "AppBundle::macro.html.twig" as macro %}

{% set body_class = "hold-transition skin-blue sidebar-mini" %}

{% block body %}
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="{{ path('base_index') }}" class="logo">
                <span class="logo-mini"><b>大学生社团</b></span>
                <span class="logo-lg"><b>大学生社团管理系统</b></span>
            </a>
            <nav class="navbar navbar-static-top">
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>

                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li><a href="#"><span class="hidden-xs">{{ app.user.username }}</span></a></li>
                        <li><a href="{{ path('logout') }}"><span class="hidden-xs">退出</span></a></li>
                    </ul>
                </div>
            </nav>
        </header>
    </div>
    {% block sidebar_menu %}
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="{{ asset('resource/adminLTE/icon/hdu.jpg') }}" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p style="margin-top: 13px">杭电社团</p>
                    </div>
                </div>
                <!-- sidebar menu: : style an be found in sidebar.less -->
                <ul class="sidebar-menu">
                    <li class="header">社团小助手</li>
                    <li class="treeview">
                        <a href="{{ path('base_index') }}">
                            <i class="fa fa-home"></i> <span>主页</span>
                        </a>
                    </li>
                    <li class="treeview {% if nav == 'community' %} active {% endif %} ">
                        <a href="{{ path('community') }}">
                            <i class="fa fa-files-o"></i>
                            <span>社团列表</span>
                        <span class="pull-right-container">
                         <i class="fa fa-angle-right pull-right"></i>
                        </span>
                        </a>
                    </li>
                    <li class="treeview {% if nav == 'personal' %}active{% endif %}">
                        <a href="#">
                            <i class="fa fa-files-o"></i>
                            <span>个人信息管理</span>
                            <span class="pull-right-container">
                             <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li {% if sub_nav is defined and sub_nav == 'interest' %}class="active"{% endif %}>
                                <a href="{{ path('personal') }}"><i class="fa fa-circle-o"></i> 个人信息管理</a>
                            </li>
                            <li {% if sub_nav is defined and sub_nav == 'password' %}class="active"{% endif %}>
                                <a href="{{ path('personal_password') }}"><i class="fa fa-circle-o"></i> 修改密码</a></li>
                        </ul>
                    </li>
                    {% if app.user.isSuperAdmin() %}
                        <li class="{% if nav == 'admin' %}active{% endif %}">
                            <a href="{{ path('admin') }}">
                                <i class="fa fa-th"></i> <span>管理员管理</span>
                            <span class="pull-right-container">
                            </span>
                            </a>
                        </li>
                    {% endif %}
                </ul>


            </section>
            <!-- /.sidebar -->
        </aside>
    {% endblock %}

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            {% block content_header %}{% endblock %}
        </section>

        <!-- Main content -->
        <section class="content">
            {% block content_body %}
                <div class="box">
                    <div class="box-header with-border">
                        {% block content_header_boxed %}{% endblock %}
                        {#<h3 class="box-title">Recently Added Products</h3>#}

                        {#<div class="box-tools pull-right">#}
                            {#<button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>#}
                            {#</button>#}
                            {#<button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>#}
                        {#</div>#}
                    </div>
                    <div class="box-body">
                        {% block content_body_boxed %}{% endblock %}
                    </div>
                </div>
            {% endblock %}
        </section>
        <!-- /.content -->

    </div>
    <footer class="main-footer">
        <strong>韩丽 &copy; 2016社团管理.</strong>
    </footer>
{% endblock %}